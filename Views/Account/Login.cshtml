@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }

    <div class="card shadow border-0">
        <div class="card-body p-4">
            <h2 class="mb-4 text-center">🔑 Login</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-controller="Account" asp-action="Login" method="post" class="needs-validation">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input id="Email" name="Email" type="email" class="form-control" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Enter your password" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <div class="text-center mt-3">
                <span>Don't have an account?</span>
                <a asp-controller="Account" asp-action="Register">Create new account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
