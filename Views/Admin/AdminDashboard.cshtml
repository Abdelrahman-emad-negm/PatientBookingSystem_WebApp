@using PatientBooking.Models
@model Tuple<
    List<PatientBooking.Models.Doctor>,
    List<PatientBooking.Models.Appointment>,
    List < PatientBooking.Models.SpecialtyEnum >
>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var doctorsCount = Model.Item1.Count;
    var appointmentsCount = Model.Item2.Count;
    var confirmedAppointments = Model.Item2.Count(a => a.Status == AppointmentStatus.Confirmed);

    // ✅ نحسب عدد المرضى المميزين من الـ Appointments
    var patientsCount = Model.Item2
        .Where(a => a.PatientId != null)  // لو عندك PatientId في Appointment
        .Select(a => a.PatientId)
        .Distinct()
        .Count();
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">⚙️ Welcome, Admin!</h1>
        <p class="text-muted fs-5">Manage your system easily from here</p>
    </div>

    <!-- Quick Stats with Better Colors -->
    <div class="row g-4 mb-5 text-center">
        <!-- Doctors Card - Blue/Primary -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <i class="fas fa-user-md fa-2x mb-3" style="opacity: 0.9;"></i>
                    <h3 class="fw-bold mb-2">@doctorsCount</h3>
                    <p class="mb-0" style="opacity: 0.9;">Doctors</p>
                </div>
            </div>
        </div>

        <!-- Patients Card - Green -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <div class="card-body text-white">
                    <i class="fas fa-users fa-2x mb-3" style="opacity: 0.9;"></i>
                    <h3 class="fw-bold mb-2">@patientsCount</h3>
                    <p class="mb-0" style="opacity: 0.9;">Patients</p>
                </div>
            </div>
        </div>

        <!-- Confirmed Appointments Card - Orange -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100" style="background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);">
                <div class="card-body text-white">
                    <i class="fas fa-calendar-check fa-2x mb-3" style="opacity: 0.9;"></i>
                    <h3 class="fw-bold mb-2">@confirmedAppointments</h3>
                    <p class="mb-0" style="opacity: 0.9;">Confirmed</p>
                </div>
            </div>
        </div>

        <!-- Total Appointments Card - Purple -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
                <div class="card-body text-dark">
                    <i class="fas fa-calendar-alt fa-2x mb-3 text-primary" style="opacity: 0.8;"></i>
                    <h3 class="fw-bold mb-2">@appointmentsCount</h3>
                    <p class="mb-0 text-muted">Total Appointments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Cards -->
    <div class="row g-4">
        <!-- Doctors Management -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Doctors</h5>
                    <p class="text-muted">Add, edit or remove doctors from the system</p>
                    <a href="/Admin/ManageDoctors" class="btn btn-primary w-100">
                        Go <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Appointments Management -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Appointments</h5>
                    <p class="text-muted">Confirm, reject, or cancel patient bookings</p>
                    <a href="/Admin/ManageAppointments" class="btn btn-success w-100">
                        Go <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Slots Management -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Slots</h5>
                    <p class="text-muted">Approve or reject doctor time slots</p>
                    <a href="/Admin/PendingSlots" class="btn btn-warning w-100">
                        Go <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>