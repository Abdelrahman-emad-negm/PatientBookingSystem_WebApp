@model Tuple<List<PatientBooking.Models.Doctor>, List<PatientBooking.Models.Appointment>>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="mb-4 text-center">⚙️ Admin Dashboard</h2>

            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs" id="adminTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="doctors-tab" data-bs-toggle="tab" data-bs-target="#doctors" type="button" role="tab">👨‍⚕️ Doctors</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="bookings-tab" data-bs-toggle="tab" data-bs-target="#bookings" type="button" role="tab">📅 Booked Appointments</button>
                </li>
            </ul>

            <div class="tab-content mt-4" id="adminTabsContent">

                <!-- Doctors Tab -->
                <div class="tab-pane fade show active" id="doctors" role="tabpanel">
                    @if (Model.Item1 != null && Model.Item1.Count > 0)
                    {
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Specialty</th>
                                    <th style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model.Item1)
                                {
                                    <tr>
                                        <td>@doctor.User?.Name</td>
                                        <td>@doctor.User?.Email</td>
                                        <td>@doctor.Specialty?.Name</td>
                                        <td>
                                            <a asp-action="DeleteDoctor" asp-route-id="@doctor.DoctorId" class="btn btn-danger btn-sm"
                                               onclick="return confirm('Are you sure you want to delete this doctor?');">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">No doctors available.</div>
                    }
                </div>

                <!-- Bookings Tab -->
                <div class="tab-pane fade" id="bookings" role="tabpanel">
                    @if (Model.Item2 != null && Model.Item2.Count > 0)
                    {
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Doctor</th>
                                    <th>Patient</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item2)
                                {
                                    <tr>
                                        <td>@item.Date.ToShortDateString()</td>
                                        <td>@item.TimeSlot</td>
                                        <td>@item.Doctor?.User?.Name ?? "N/A"</td>
                                        <td>@item.Patient?.Name ?? "N/A"</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">No appointments booked yet.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
