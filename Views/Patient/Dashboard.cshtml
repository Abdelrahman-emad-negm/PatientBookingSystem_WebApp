@model List<PatientBooking.Models.Appointment>
@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var patientName = ViewBag.PatientName as string ?? "Patient";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-calendar-plus"></i>
                        Welcome @patientName - Available Appointments
                    </h2>
                </div>
                <div class="card-body p-4">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h4>No Available Appointments</h4>
                            <p class="mb-0">There are no available appointments at the moment. Please check back later or contact the clinic directly.</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <h5 class="text-muted">
                                <i class="fas fa-list"></i>
                                Available Appointments (@Model.Count() found)
                            </h5>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-calendar"></i> Date</th>
                                        <th><i class="fas fa-clock"></i> Time</th>
                                        <th><i class="fas fa-user-md"></i> Doctor</th>
                                        <th><i class="fas fa-stethoscope"></i> Specialty</th>
                                        <th class="text-center"><i class="fas fa-bolt"></i> Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    @item.Date.ToString("dd/MM/yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @item.TimeSlot.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-user-md"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@item.Doctor?.User?.Name</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info text-dark">
                                                    @item.Doctor?.Specialty?.Name
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <form asp-action="Book" method="post" class="d-inline" onsubmit="return confirmBooking('@item.Doctor?.User?.Name', '@item.Date.ToString("dd/MM/yyyy")', '@item.TimeSlot.ToString(@"hh\:mm")')">
                                                    <input type="hidden" name="id" value="@item.AppointmentId" />
                                                    <button type="submit" class="btn btn-success btn-sm px-3 py-2">
                                                        <i class="fas fa-check-circle"></i> Book Now
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4">
                            <div class="alert alert-light border">
                                <h6><i class="fas fa-info-circle"></i> Important Notes:</h6>
                                <ul class="mb-0">
                                    <li>Appointments are subject to doctor's approval</li>
                                    <li>You will receive a confirmation once the appointment is approved</li>
                                    <li>Please arrive 15 minutes before your scheduled time</li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-2x text-primary mb-3"></i>
                    <h5>Advanced Booking</h5>
                    <p class="text-muted">Search by specialty and doctor</p>
                    <a href="/Patient/Booking" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Advanced Search
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-history fa-2x text-success mb-3"></i>
                    <h5>My Appointments</h5>
                    <p class="text-muted">View your booked appointments</p>
                    <a href="/Patient/MyAppointments" class="btn btn-outline-success">
                        <i class="fas fa-list"></i> View Appointments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmBooking(doctorName, date, time) {
        return confirm(`Are you sure you want to book an appointment with Dr. ${doctorName} on ${date} at ${time}?`);
    }

    // Success message if redirected after booking
    @if (TempData["BookingSuccess"] != null)
    {
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    alert('@TempData["BookingSuccess"]');
                });
    </script>
    }
</script>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }
</style>