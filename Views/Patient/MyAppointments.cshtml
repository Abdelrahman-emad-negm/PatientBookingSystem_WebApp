@model IEnumerable<PatientBooking.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalCount = ViewBag.TotalCount ?? 0;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="container py-4">
    <!-- Header -->
    <div class="welcome-card card border-0 shadow mb-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex flex-column">
                    <h2 class="text-primary mb-3"><i class="fas fa-calendar-alt me-2"></i> My Appointments</h2>
                    <p class="lead mb-4">Manage your upcoming and past appointments</p>
                    <div class="d-flex gap-2 mt-auto">
                        <a href="/Patient/Dashboard" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <a href="/Patient/AdvancedBooking" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Book New Appointment
                        </a>
                    </div>
                </div>
                <div class="col-md-4 d-none d-md-block">
                    <div class="h-100 bg-primary-light"
                         style="background: url('https://img.freepik.com/free-vector/appointment-booking-concept-illustration_114360-1001.jpg') center/cover;"></div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="card shadow-sm border-0">
                <div class="card-body py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Appointments Yet</h4>
                    <p class="text-muted mb-4">You haven't booked any appointments. Start by searching for doctors in your preferred specialty.</p>
                    <a href="/Patient/AdvancedBooking" class="btn btn-primary btn-lg">
                        <i class="fas fa-search me-2"></i>Find Doctors
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Upcoming Appointments -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Upcoming Appointments
                            <span class="badge bg-light text-primary ms-2">
                                @Model.Where(x => x.Status != PatientBooking.Models.AppointmentStatus.Completed && x.Date.Add(x.TimeSlot) >= DateTime.Now).Count()
                            </span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @{
                            var upcomingAppointments = Model.Where(x => x.Status != PatientBooking.Models.AppointmentStatus.Completed && x.Date.Add(x.TimeSlot) >= DateTime.Now).ToList();
                        }

                        @if (!upcomingAppointments.Any())
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Upcoming Appointments</h5>
                                <p class="text-muted">All caught up! No appointments scheduled.</p>
                            </div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var a in upcomingAppointments)
                                {
                                    var doctorName = a.Doctor?.User?.Name ?? "Unknown Doctor";
                                    var doctorPhoto = a.Doctor?.Photo ?? "/images/default-doctor.png";
                                    var doctorSpecialty = a.Doctor?.Specialty.ToString() ?? "N/A";
                                    var shortCv = a.Doctor?.ShortCV ?? "Experienced professional committed to providing high-quality patient care.";
                                    var statusBadge = a.Status == PatientBooking.Models.AppointmentStatus.Confirmed ? "success" : "warning";
                                    var statusIcon = a.Status == PatientBooking.Models.AppointmentStatus.Confirmed ? "check-circle" : "clock";
                                    var appointmentDateTime = a.Date.Add(a.TimeSlot);
                                    var timeUntil = appointmentDateTime - DateTime.Now;
                                    var appointmentId = a.AppointmentId;

                                    <div class="list-group-item border-0 appointment-card">
                                        <div class="d-flex gap-3 align-items-start">
                                            <!-- Doctor Avatar -->
                                            <div class="flex-shrink-0">
                                                <img src="@doctorPhoto" alt="@doctorName"
                                                     class="appointment-avatar"
                                                     onerror="this.src='/images/default-doctor.png'" />
                                                <div class="text-center mt-1">
                                                    <span class="badge bg-@statusBadge badge-sm">
                                                        <i class="fas fa-@statusIcon me-1"></i>@a.Status
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Appointment Info -->
                                            <div class="appointment-info flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h6 class="appointment-doctor-name mb-1">Dr. @doctorName</h6>
                                                    @if (timeUntil.TotalHours > 0 && timeUntil.TotalDays < 7)
                                                    {
                                                        <span class="badge bg-info time-badge">
                                                            @if (timeUntil.TotalDays >= 1)
                                                            {
                                                                <span>In @((int)timeUntil.TotalDays) day@(timeUntil.TotalDays > 1 ? "s" : "")</span>
                                                            }
                                                            else
                                                            {
                                                                <span>In @((int)timeUntil.TotalHours) hour@(timeUntil.TotalHours > 1 ? "s" : "")</span>
                                                            }
                                                        </span>
                                                    }
                                                </div>

                                                <div class="specialty-badge-small mb-2">@doctorSpecialty</div>

                                                <div class="appointment-details mb-3">
                                                    <div class="detail-item">
                                                        <i class="fas fa-calendar me-2 text-primary"></i>
                                                        <span class="fw-medium">@a.Date.ToString("dddd, dd MMMM yyyy")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <i class="fas fa-clock me-2 text-primary"></i>
                                                        <span class="fw-medium">@a.TimeSlot.ToString(@"hh\:mm")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                                        <span>Clinic</span>
                                                    </div>
                                                </div>

                                                <!-- CV Toggle -->
                                                <button class="cv-toggle-btn mb-3" type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#cv-upcoming-@appointmentId"
                                                        aria-expanded="false">
                                                    <i class="fas fa-user-md me-1"></i>
                                                    Doctor Profile
                                                    <i class="fas fa-chevron-down ms-1"></i>
                                                </button>

                                                <div class="collapse" id="cv-upcoming-@appointmentId">
                                                    <div class="cv-content mb-3">
                                                        <strong>About Dr. @doctorName:</strong><br>
                                                        @shortCv
                                                        <hr class="my-2">
                                                        <div class="row g-2 text-center">
                                                            <div class="col-4">
                                                                <small class="text-muted">Specialty</small><br>
                                                                <strong>@doctorSpecialty</strong>
                                                            </div>
                                                            <div class="col-4">
                                                                <small class="text-muted">Experience</small><br>
                                                                <strong>5+ Years</strong>
                                                            </div>
                                                            <div class="col-4">
                                                                <small class="text-muted">Rating</small><br>
                                                                <strong>4.8★</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Actions -->
                                                <div class="d-flex gap-2">
                                                    @if (a.Status == PatientBooking.Models.AppointmentStatus.Confirmed && appointmentDateTime > DateTime.Now.AddHours(24))
                                                    {
                                                        <form asp-action="CancelAppointment" method="post" class="d-inline"
                                                              onsubmit="return confirm('Are you sure you want to cancel this appointment?\n\nDoctor: Dr. @doctorName\nDate: @a.Date.ToString("dd MMM yyyy")\nTime: @a.TimeSlot.ToString(@"hh\\:mm")\n\nThis action cannot be undone.');">
                                                            <input type="hidden" name="appointmentId" value="@a.AppointmentId" />
                                                            <button type="submit" class="btn btn-danger btn-sm cancel-btn">
                                                                <i class="fas fa-times me-1"></i>Cancel Appointment
                                                            </button>
                                                        </form>
                                                        <button class="btn btn-outline-primary btn-sm">
                                                            <i class="fas fa-edit me-1"></i>Reschedule
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-secondary btn-sm" disabled title="Cannot cancel within 24 hours">
                                                            <i class="fas fa-ban me-1"></i>Cannot Cancel
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Past Appointments -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-gradient-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Past Appointments
                            <span class="badge bg-light text-secondary ms-2">
                                @Model.Where(x => x.Status == PatientBooking.Models.AppointmentStatus.Completed || (x.Date.Add(x.TimeSlot) < DateTime.Now && x.Status != PatientBooking.Models.AppointmentStatus.Completed)).Count()
                            </span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @{
                            var pastAppointments = Model.Where(x => x.Status == PatientBooking.Models.AppointmentStatus.Completed || (x.Date.Add(x.TimeSlot) < DateTime.Now && x.Status != PatientBooking.Models.AppointmentStatus.Completed)).OrderByDescending(x => x.Date.Add(x.TimeSlot)).ToList();
                        }

                        @if (!pastAppointments.Any())
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No Past Appointments</h5>
                                <p class="text-muted">Your appointment history will appear here.</p>
                            </div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var a in pastAppointments)
                                {
                                    var doctorName = a.Doctor?.User?.Name ?? "Unknown Doctor";
                                    var doctorPhoto = a.Doctor?.Photo ?? "/images/default-doctor.png";
                                    var doctorSpecialty = a.Doctor?.Specialty.ToString() ?? "N/A";
                                    var shortCv = a.Doctor?.ShortCV ?? "Experienced professional committed to providing high-quality patient care.";
                                    var appointmentDateTime = a.Date.Add(a.TimeSlot);
                                    var timeAgo = DateTime.Now - appointmentDateTime;
                                    var appointmentId = a.AppointmentId;
                                    var isCompleted = a.Status == PatientBooking.Models.AppointmentStatus.Completed;
                                    var isExpired = appointmentDateTime < DateTime.Now && !isCompleted;

                                    <div class="list-group-item border-0 appointment-card past-appointment">
                                        <div class="d-flex gap-3 align-items-start">
                                            <!-- Doctor Avatar -->
                                            <div class="flex-shrink-0">
                                                <img src="@doctorPhoto" alt="@doctorName"
                                                     class="appointment-avatar"
                                                     onerror="this.src='/images/default-doctor.png'" />
                                                <div class="text-center mt-1">
                                                    @if (isCompleted)
                                                    {
                                                        <span class="badge bg-success badge-sm">
                                                            <i class="fas fa-check me-1"></i>Completed
                                                        </span>
                                                    }
                                                    else if (isExpired)
                                                    {
                                                        <span class="badge bg-danger badge-sm">
                                                            <i class="fas fa-times me-1"></i>Expired
                                                        </span>
                                                    }
                                                </div>
                                            </div>

                                            <!-- Appointment Info -->
                                            <div class="appointment-info flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h6 class="appointment-doctor-name mb-1">Dr. @doctorName</h6>
                                                    <span class="badge bg-light text-muted time-badge">
                                                        @if (timeAgo.TotalDays >= 1)
                                                        {
                                                            <span>@((int)timeAgo.TotalDays) day@(timeAgo.TotalDays > 1 ? "s" : "") ago</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@((int)timeAgo.TotalHours) hour@(timeAgo.TotalHours > 1 ? "s" : "") ago</span>
                                                        }
                                                    </span>
                                                </div>

                                                <div class="specialty-badge-small mb-2">@doctorSpecialty</div>

                                                <div class="appointment-details mb-3">
                                                    <div class="detail-item">
                                                        <i class="fas fa-calendar me-2 text-secondary"></i>
                                                        <span>@a.Date.ToString("dddd, dd MMMM yyyy")</span>
                                                    </div>
                                                    <div class="detail-item">
                                                        <i class="fas fa-clock me-2 text-secondary"></i>
                                                        <span>@a.TimeSlot.ToString(@"hh\:mm")</span>
                                                    </div>
                                                </div>

                                                <!-- CV Toggle -->
                                                <button class="cv-toggle-btn mb-3" type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#cv-past-@appointmentId"
                                                        aria-expanded="false">
                                                    <i class="fas fa-user-md me-1"></i>
                                                    Doctor Profile
                                                    <i class="fas fa-chevron-down ms-1"></i>
                                                </button>

                                                <div class="collapse" id="cv-past-@appointmentId">
                                                    <div class="cv-content mb-3">
                                                        <strong>About Dr. @doctorName:</strong><br>
                                                        @shortCv
                                                    </div>
                                                </div>

                                                <!-- Actions -->
                                                <div class="d-flex gap-2">
                                                    @if (isCompleted)
                                                    {
                                                        @if (a.Rating == null)
                                                        {
                                                            <a asp-action="RateAppointment" asp-route-appointmentId="@a.AppointmentId"
                                                               class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-star me-1"></i>Rate Visit
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success" title="You rated this visit @a.Rating/5 stars">
                                                                <i class="fas fa-star me-1"></i>Rated (@a.Rating/5)
                                                            </span>
                                                        }
                                                        <form asp-action="BookAgain" method="post" class="d-inline">
                                                            <input type="hidden" name="doctorId" value="@a.Doctor.DoctorId" />
                                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                                <i class="fas fa-redo me-1"></i>Book Again
                                                            </button>
                                                        </form>
                                                    }
                                                    else if (isExpired)
                                                    {
                                                        <form asp-action="BookAgain" method="post" class="d-inline">
                                                            <input type="hidden" name="doctorId" value="@a.Doctor.DoctorId" />
                                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                                <i class="fas fa-redo me-1"></i>Book Again
                                                            </button>
                                                        </form>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-exclamation-triangle me-1"></i>Missed Appointment
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Appointments pagination">
                    <ul class="pagination pagination-rounded">
                        @if (page > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("MyAppointments", new { page = page - 1 })">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                        {
                            <li class="page-item @(i == page ? "active" : "")">
                                <a class="page-link" href="@Url.Action("MyAppointments", new { page = i })">@i</a>
                            </li>
                        }

                        @if (page < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("MyAppointments", new { page = page + 1 })">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    }
</div>

